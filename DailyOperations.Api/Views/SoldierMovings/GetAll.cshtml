@using DailyOperations.Domain.ViewModels.Soldiers;
@model GetAllSoldiersViewModel



<div class="center mg-top25 mg-bottom50 gap2 need-media-row">
    <a asp-controller="Soldiers" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold  need-media-row">
          المجندين
    </a>
    <a asp-controller="SoldierMovings" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold white bg-primary need-media-row">
         النقل
    </a>
    <a asp-controller="SoldiersFireShooting" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold need-media-row">
        الرماية
    </a>
    <a asp-controller="SoldierHolidays" asp-action="GetAllHolidays" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold need-media-row">
         المرضي
    </a>
</div>


<div class="center mg-top20" id="officers-body">
    <table class="width100">
        <thead>
            <tr>
                <th> الاسم </th>
                <th> القوة </th>
                <th> الإدارة  </th>
                <th> الإدارة السابقة </th>
                <th> تاريخ النقل </th>
                <th> الملاحظات </th>
                <th> إضافة أخر نقل </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Soldiers != null && Model.Soldiers.Count() > 0)
            {
                @foreach (var obj in Model.Soldiers)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.PowerType?.Name</td>
                        <td>@obj.Department?.Name</td>
                        <td>@obj.PreviousDepartment?.Name</td>
                        <td>@obj.MovingDate?.ToShortDateString()</td>
                        <td>@obj.MovingNotes </td>
                        <td>
                            <div class="cursor" onclick="openForm('SoldierMovingForm', 'soldierId', @obj.Id)">
                                <span class="material-symbols-rounded cursor gold">
                                    add_box
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




<form method="post" asp-controller="SoldierMovings" asp-action="AddOrUpdate" enctype="multipart/form-data">
    <div class="form-fees gap0" id="SoldierMovingForm">
        <div class="flex-row justify-content-start">
            <span class="material-symbols-rounded danger large-font cursor" id="close" onclick="closeForm('SoldierMovingForm')">
                close
            </span>
        </div>
        <div class="flex-column align-center gap1">
            <span id="SoldierError" class="center danger font2rem mg-bottom20 bold"></span>

                <input hidden asp-for="Soldier.Id" id="soldierId" />

                <div class="mg-top20 width80">
                    <label asp-for="Soldier.PreviousDepartmentId">الإدارة السابقة</label>
                    <select name="Soldier.PreviousDepartmentId" class="input-box width100" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                    </select>
                </div>
                <div class="mg-top20 width80">
                    <label asp-for="Soldier.DepartmentId"> الإدارة الحالية </label>
                    <select name="Soldier.DepartmentId" class="input-box width100" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                    </select>
                </div>

                <div class="mg-top20 width80">
                    <label asp-for="Soldier.MovingDate"> تاريخ النقل </label>
                    <input asp-for="Soldier.MovingDate" class="input-box width100" type="date" />
                </div>

                <div class="mg-top20 width80">
                    <label asp-for="Soldier.MovingNotes"> ملاحظات </label>
                    <input asp-for="Soldier.MovingNotes" class="input-box width100" type="text" />
                </div>


            <div class="center">
                <button type="submit" class="center white width500px height50px card-radius bg-primary"> حفظ</button>
            </div>
        </div>
    </div>
</form>



<script src="~/js/soldier.js"></script>