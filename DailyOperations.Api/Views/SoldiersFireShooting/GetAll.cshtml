@using DailyOperations.Domain.ViewModels.Soldiers;
@model GetAllSoldiersViewModel



<div class="center mg-top25 mg-bottom50 gap2 need-media-row">
    <a asp-controller="Soldiers" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold  need-media-row">
        المجندين
    </a>
    <a asp-controller="SoldierMovings" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold need-media-row">
        النقل
    </a>
    <a asp-controller="SoldiersFireShooting" asp-action="GetAll" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold white bg-primary need-media-row">
        الرماية
    </a>
    <a asp-controller="SoldierHolidays" asp-action="GetAllHolidays" class="center padding1 gap2 font20px card-radius height50px cursor width200px shadow1 bold need-media-row">
        المرضي
    </a>
</div>


<div class="center mg-top20" id="officers-body">
    <table class="width100">
        <thead>
            <tr>
                <th> الاسم </th>
                <th> تاريخ أخر رماية </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Soldiers != null && Model.Soldiers.Count() > 0)
            {
                @foreach (var obj in Model.Soldiers)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.LastFireShootingDate?.ToShortDateString()</td>
                        <td>
                            <div class="cursor" onclick="openForm('SoldierShootingForm', 'soldierId', @obj.Id)">
                                <span class="material-symbols-rounded cursor gold">
                                    add_box
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



<form method="post" asp-controller="SoldiersFireShooting" asp-action="AddOrUpdate" enctype="multipart/form-data">
    <div class="form-fees gap0" id="SoldierShootingForm">
        <div class="flex-row justify-content-start">
            <span class="material-symbols-rounded danger large-font cursor" id="close" onclick="closeForm('SoldierShootingForm')">
                close
            </span>
        </div>
        <div class="flex-column align-center gap1">

            <input hidden asp-for="Soldier.Id" id="soldierId" />

            <div class="mg-top20 width80">
                <label asp-for="Soldier.LastFireShootingDate"> تاريخ أخر رماية </label>
                <input asp-for="Soldier.LastFireShootingDate" class="input-box width100" type="date" />
            </div>

            <div class="center">
                <button type="submit" class="center white width500px height50px card-radius bg-primary"> حفظ</button>
            </div>
        </div>
    </div>
</form>

<script src="~/js/soldier.js"></script>